<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/a3"
    tools:context="com.example.admin.registerlogin.PMenu">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Welcome User"
                android:textSize="30dp"
                android:textStyle="bold" />

    <Button
        android:id="@+id/btnNewArrivals"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/a1"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_below="@+id/textView10"
        android:text="View Attendance" />

    <Button
        android:id="@+id/btnOffers"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/a1"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_below="@+id/btnNewArrivals"
        android:text="View Events Schedule" />

    <Button
        android:id="@+id/btnShopCategory"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/btnOffers"
        android:background="@drawable/a1"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignRight="@+id/btnOffers"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btnOffers"
        android:text="View Exam Schedule" />

    <Button
        android:id="@+id/btnCheckAlternatives"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/a1"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/btnShopCategory"
        android:layout_alignRight="@+id/btnShopCategory"
        android:layout_below="@+id/btnShopCategory"
        android:text="View Profile" />

    <Button
        android:id="@+id/btnSendMsgp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/a1"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/btnShopCategory"
        android:layout_alignRight="@+id/btnShopCategory"
        android:layout_below="@+id/btnCheckAlternatives"
        android:text="Send Message" />

    <Button
        android:id="@+id/btnViewMsgp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/a1"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/btnShopCategory"
        android:layout_alignRight="@+id/btnShopCategory"
        android:layout_below="@+id/btnSendMsgp"
        android:text="View Message" />

    <Button
        android:id="@+id/tno"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/a1"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/btnShopCategory"
        android:layout_alignRight="@+id/btnShopCategory"
        android:layout_below="@+id/btnViewMsgp"
        android:text="Logout" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
